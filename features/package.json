{
  "name":           "akvo-rsr-features",
  "description":    "Akvo RSR feature specs",
  "version":        "0.1.0",
  "repository": {
    "type": "git",
    "url":  "https://github.com/akvo/akvo-rsr.git"
  },
  "engines": {
    "node": ">=0.10.17"
  },
  "scripts": {
    "preinstall": "npm run install_mocha",
    "install_mocha": "[[ -x `which mocha` ]] || sudo npm install -g mocha",
    "all_specs":  "mocha navigation/*.coffee -R spec -r mocha-cakes --compilers coffee:coffee-script"
  },
  "devDependencies": {
    "coffee-script":    ">=1.6.3",
    "coffeelint":       ">=0.5.7",
    "LiveScript":       ">=1.2.0",
    "chai":             ">=1.7.2",
    "mocha-cakes":      ">=0.9.0",
    "underscore":       ">=1.3.3",
    "spooky":           ">=0.2.3"
  }
}
